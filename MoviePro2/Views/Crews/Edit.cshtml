@model MoviePro2.Models.Crew

@using MoviePro2.Services
@inject IImageService _imageService

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Crew</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Profile" />
            <input type="hidden" asp-for="ContentType" />

            <div class="form-group">
                <label asp-for="MovieID" class="control-label"></label>
                <select asp-for="MovieID" class="form-control" asp-items="ViewBag.MovieID"></select>
                @*<input type="text" asp-for="MovieID" class="form-control" />*@
                <span asp-validation-for="MovieID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CrewID" class="control-label"></label>
                <input asp-for="CrewID" class="form-control" />
                <span asp-validation-for="CrewID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job" class="control-label"></label>
                <input asp-for="Job" class="form-control" />
                <span asp-validation-for="Job" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile" class="control-label"></label>
                <input type="file" name="NewProfile" class="form-control" />
                <span asp-validation-for="Profile" class="text-danger"></span>
                <img id="oldProfile" class="img-fluid" src="@_imageService.DecodePoster(Model.Profile, Model.ContentType)" width="50%" height="50%" />
            @*</div>
            <div class="form-group">
                <label asp-for="ContentType" class="control-label"></label>
                <input asp-for="ContentType" class="form-control" />
                <span asp-validation-for="ContentType" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

