@model IEnumerable<MoviePro2.Models.Crew>

@using MoviePro2.Services
@inject IImageService imageService

@{
    ViewData["Title"] = "Index";
}

<h1>Crews</h1>

<p>
    <a asp-action="Create">Create New Crew</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CrewID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Movie.MovieID)
        </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CrewID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job)
            </td>
            <td>
                <img class="img-fluid" src="@imageService.DecodePoster(item.Profile, item.ContentType)" width="50px" height="50px" />
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.Movie.Title)
        </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
